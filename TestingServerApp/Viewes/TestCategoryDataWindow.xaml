<Window x:Class="TestingServerApp.Viewes.TestCategoryDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingServerApp.Viewes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        DataContext="{StaticResource baseVM}"
        Title="Test category" Height="210" Width="230">
    
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <!-- Data -->
            <StackPanel Orientation="Vertical" Height="110">
                <!-- Name -->
                <TextBlock Text="Test category:" Style="{DynamicResource Style_WindowTextBlock}"/>
                <TextBox Text="{Binding TestCategoryPageVM.CurrentTestCategory.Name}" Style="{DynamicResource Style_WindowTextBox}"/>

                <!-- Error message -->
                <TextBlock Text="{Binding  TestCategoryPageVM.ErrorMessage}" Style="{DynamicResource Style_WindowErrorMessageTextBlock}" />
            </StackPanel>

            <!-- Command button -->
            <Button Content="Save" Command="{Binding TestCategoryPageVM.SaveCommand}" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
